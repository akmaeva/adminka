<%= render 'shared/errors', object: @region %>

<% currently_at "Регионы" %>

<%= form_with model: @region do |form| %>

  <div class="form-group">
    <%= form.label "Название", class: "form-label mb-2 mt-3", style: "margin-left: 15px;" %>
    <%= form.text_field :name, class: "form-control form-control-lg" %>
  </div>

  <div class="form-group">
    <%= form.label "Страна", class: "form-label mb-2 mt-3", style: "margin-left: 15px;" %>
    <%= form.collection_select :country_id, Country.order(:name), :id, :name, { prompt: "Выберите страну" }, class: "form-select form-select-lg" %>
  </div>

  <div class="container" style="margin-top: 20px;">
    <div class="row">
      <div class="col-auto">
        <%= form.submit "Сохранить", class: "btn btn-primary", style: "border: 3px solid #4E15B2; border-radius: 13px" %>
      </div>

      <div class="col-auto">
        <%= link_to "Назад", regions_path, class: "btn btn-secondary", style: "border: 3px solid #7D1C32; border-radius: 13px;" %>
      </div>
    </div>
  </div>
<% end %>

<head>
  <style>
    .btn.btn-primary:hover {
    background-color: #4E15B2;
    }

    .btn-primary {
      background-color: #5D19D2;
    }

    .btn.btn-secondary:hover {
      background-color: #7D1C32;
    }

    .btn-secondary {
      background-color: #900E2C;
      
    }
  </style>

  <style>
    .form-control-lg {
      border-radius: 20px;
    }

    .form-select-lg {
      border-radius: 20px;
      padding: 9px;
    }
  </style>
</head>