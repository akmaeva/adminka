<% provide :page_title, "Регионы" %>
<% currently_at "Регионы" %>

<p style="color: green"><%= notice %></p>

<h1 style="margin-bottom: 30px;">Регионы</h1>

<div class="container" style="margin-bottom: 30px;">
  <div class="row">
    <div class="col-sm-9">
      <%= link_to "Добавить запись", new_region_path, class: "btn btn-primary", style: "border: 3px solid #4E15B2; border-radius: 13px" %>
    </div>
  </div>
</div>

<table class="table tabel-bordered">
  <thead>
    <tr>
      <th>Название</th>
      <th>Страна</th>
    </tr>
  </thead>
  <tbody>
    <% @regions.each do |region| %>
      <%= render "region", region: region %>
    <% end %>
  </tbody>
</table>

<head>
  <style>
    .btn.btn-primary:hover {
    background-color: #4E15B2;
    }

    .btn-primary {
      background-color: #5D19D2;
    }
  </style>
</head>
