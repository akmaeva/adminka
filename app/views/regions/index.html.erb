<% provide :page_title, "Регионы" %>
<% currently_at "Регионы" %>

<p style="color: green"><%= notice %></p>

<h1 style="margin-bottom: 30px;">Регионы</h1>

<div class="container" style="margin-bottom: 30px;">
  <div class="row">
    <div class="col-sm-9">
      <%= link_to "Добавить запись", new_region_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

<table class="table tabel-bordered">
  <thead>
    <tr>
      <th>Название</th>
      <th>Страна</th>
    </tr>
  </thead>
  <tbody>
    <% @regions.each do |region| %>
      <%= render "region", region: region %>
    <% end %>
  </tbody>
</table>
