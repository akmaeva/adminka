<tr id="turbasa_row_<%= turbasa.id %>">
  <td><%= turbasa.name %></td>
  <td><%= Country.find(turbasa.country_id).name %></td>
  <td><%= Region.find(turbasa.region_id).name %></td>
  <td><%= Town.find(turbasa.town_id).name %></td>
  <td><%= turbasa.contact %></td>
  <td>
    <div class="container">
    <div class="row">
      <div class="col-auto">
        <%= link_to "Просмотр", turbasa, class: "btn btn-info" %>
      </div>

      <div class="col-auto">
        <%= link_to "Редактировать", edit_turbasa_path(turbasa), class: "btn btn-success" %>
      </div>

      <div class="col-auto">
        <%= button_to "Удалить", turbasa, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
  </td>
</tr>
