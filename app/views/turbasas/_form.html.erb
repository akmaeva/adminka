<%= form_with(model: turbasa) do |form| %>
  <% if turbasa.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(turbasa.errors.count, "error") %> prohibited this turbasa from being saved:</h2>

      <ul>
        <% turbasa.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label "Название", class: "form-label mb-2 mt-3" %>
    <%= form.text_field :name, class: "form-control form-control-lg" %>
  </div>

  <div class="form-group">
    <%= form.label "Страна", class: "form-label mb-2 mt-3" %>
    <%= form.collection_select :country_id, Country.order(:name), :id, :name, { prompt: "Выберите страну" }, class: "form-select form-select-lg" %>
    
  </div>

  <div class="form-group">
    <%= form.label "Регион", class: "form-label mb-2 mt-3" %>
    <%= form.collection_select :region_id, Region.order(:name), :id, :name, { prompt: "Выберите регион" }, class: "form-select form-select-lg" %>
    
  </div>

  <div class="form-group">
    <%= form.label "Город", class: "form-label mb-2 mt-3" %>
    <%= form.collection_select :town_id, Town.order(:name), :id, :name, { prompt: "Выберите город" }, class: "form-select form-select-lg" %>
    
  </div>

  <div class="form-group">
    <%= form.label "Контакты", class: "form-label mb-2 mt-3" %>
    <%= form.text_field :contact, class: "form-control form-control-lg", style: "margin-bottom: 30px;" %>
  </div>

  <div class="container">
  <div class="row">
    <div class="col-auto">
      <%= form.submit "Сохранить", class: "btn btn-primary" %>
    </div>

    <div class="col-auto">
      <%= link_to "Назад", turbasas_path, class: "btn btn-outline-primary" %>
    </div>
  </div>
</div>

  
<% end %>
