<%= render 'shared/errors', object: @turbasa %>

<% currently_at 'Турбазы' %>

<%= form_with(model: turbasa) do |form| %>

  <div class="form-group">
    <%= form.label "Название", class: "form-label mb-2 mt-3"%> 
    <%= form.text_field :name, class: "form-control form-control-lg" %>
  </div>

  <div class="form-group">
    <%= form.label "Страна", class: "form-label mb-2 mt-3", style: "margin-left: 15px;" %>
    <%= form.collection_select :country_id, Country.order(:name), :id, :name, { prompt: "Выберите страну" }, class: "form-select form-select-lg" %>
    
  </div>

  <div class="form-group">
    <%= form.label "Регион", class: "form-label mb-2 mt-3", style: "margin-left: 15px;" %>
    <%= form.collection_select :region_id, Region.order(:name), :id, :name, { prompt: "Выберите регион" }, class: "form-select form-select-lg" %>
    
  </div>

  <div class="form-group">
    <%= form.label "Город", class: "form-label mb-2 mt-3", style: "margin-left: 15px;" %>
    <%= form.collection_select :town_id, Town.order(:name), :id, :name, { prompt: "Выберите город" }, class: "form-select form-select-lg" %>
    
  </div>

  <div class="form-group">
    <%= form.label "Контакты", class: "form-label mb-2 mt-3", style: "margin-left: 15px;" %>
    <%= form.text_field :contact, class: "form-control form-control-lg", style: "margin-bottom: 30px;" %>
  </div>

  <div class="container">
  <div class="row">
    <div class="col-auto">
      <%= form.submit "Сохранить", class: "btn btn-primary", style: "border: 3px solid #4E15B2; border-radius: 13px;" %>
    </div>

    <div class="col-auto">
      <%= link_to "Назад", turbasas_path, class: "btn btn-secondary", style: "border: 3px solid #7D1C32; border-radius: 13px;" %>
    </div>
  </div>
</div>

  
<% end %>

<head>
  <style>
    .btn.btn-primary:hover {
    background-color: #4E15B2;
    }

    .btn-primary {
      background-color: #5D19D2;
    }

    .btn.btn-secondary:hover {
      background-color: #7D1C32;
    }

    .btn-secondary {
      background-color: #900E2C;
      
    }
  </style>

  <style>
    .form-control-lg {
      border-radius: 20px;
    }

    .form-select-lg {
      border-radius: 20px;
      padding: 9px;
    }
  </style>
</head>
