<% provide :page_title, "Города" %>
<% currently_at  "Города" %>

<p style="color: green"><%= notice %></p>

<h1 style="margin-bottom: 30px;">Города</h1>

<div class="container" style="margin-bottom: 30px;">
  <div class="row">
    <div class="col-sm-9">
      <%= link_to "Добавить запись", new_town_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

<table class="table tabel-bordered">
  <thead>
    <tr>
      <th>Название</th>
      <th>Страна</th>
      <th>Регион</th>
    </tr>
  </thead>
  <tbody>
    <% @towns.each do |town| %>
      <%= render "town", town: town %>
    <% end %>
  </tbody>
</table>
